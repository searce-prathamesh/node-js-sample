pipeline {
    agent any // Use any available Jenkins agent

    environment {
        NODE_ENV = 'production' // Set the desired environment if needed
    }

    stages {
        stage('git Checkout') {
            steps {
                checkout([$class: 'GitSCM', userRemoteConfigs: [[url: 'https://github.com/searce-prathamesh/node-js-sample.git']], branches: [[name: 'refs/tags/v1.1.0']]], poll: false)
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'yarn install'
                    echo "Installed dependencies"
                }
            }
        }

        stage('Deploy') {
            when { tag "v1.1.0" }
            steps {
                echo 'Deploying only because this commit is tagged...'
                sh 'npm test'
            }
        }
    }
}
