pipeline {
    agent any // Use any available Jenkins agent

    environment {
        NODE_ENV = 'production' // Set the desired environment if needed
    }

    stages {
        stage('git Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                sh 'sudo wget -qO /bin/pnpm "https://github.com/pnpm/pnpm/releases/latest/download/pnpm-linuxstatic-x64"'
                sh 'sudo chmod +x /bin/pnpm'
                }
            }
        }

        stage('Deploy') {
            when {
                tag "v1.1.0"
            }
            steps {
                echo 'Deploying only because this commit is tagged...'
                sh 'npm test'
            }
        }
    }
}
