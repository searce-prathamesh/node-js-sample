pipeline {
  agent any // Use any available Jenkins agent
  environment {
    NODE_ENV = 'production' // Set the desired environment if needed
  }
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Install Dependencies') {
      steps {
        script {
          def pnpmHome = tool name: 'pnpm', type: 'pnpm'
          // Assuming you have a Jenkins tool configuration for pnpm
          if (pnpmHome) {
            sh "${pnpmHome}/bin/pnpm install"
          } else {
            error "pnpm tool is not configured in Jenkins"
          }
        }
      }
    }
    stage('Test') {
      steps {
        sh 'npm test' // Replace with your test command
      }
    }
  }
}

