pipeline {
  agent any // Use any available Jenkins agent
  environment {
    NODE_ENV = 'production' // Set the desired environment if needed
  }
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Install Dependencies') {
            steps {
                script {
                    // Cache the PNPM store
                    stash(name: 'pnpm-cache', includes: '**/.pnpm-store')
                }
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    // Restore the cached PNPM store
                    unstash 'pnpm-cache'
                    sh 'sudo npm install -g pnpm'
                }
            }
        }
    
    stage('Test') {
      steps {
        sh 'npm test' // Replace with your test command
      }
    }
  }
}
