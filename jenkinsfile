pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    def npmCacheDir = "${HOME}/.npm-cache"
                    sh "mkdir -p ${npmCacheDir}"
                    sh "npm config set cache ${npmCacheDir}"
                    sh 'npm install'
                }
            }
        }
        stage('Test') {
            steps {
                sh 'npm run'
            }
        }
    }
}

