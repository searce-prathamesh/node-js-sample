pipeline {
  agent any // Use any available Jenkins agent
  tools {nodejs "nodejs"}
  environment {
    NODE_ENV = 'production' // Set the desired environment if needed
  }
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('build') {
      steps {
        script {
          def npmCacheDir = "${HOME}/.npm-cache"
          sh "mkdir -p ${npmCacheDir}"
          sh "npm config set cache ${npmCacheDir}"
          sh 'npm install'
        }
      }
    }
    stage('Run app') {
      steps {
        sh 'npm run' // Replace with your test command
      }
    }
  }
}

