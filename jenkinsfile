pipeline {
    agent any // Use any available Jenkins agent

    environment {
        NODE_ENV = 'production' // Set the desired environment if needed
    }

    stages {
        stage('git Checkout') {
            steps {
                checkout scm: [$class: 'GitSCM', userRemoteConfigs: [[url: src]], branches: [[name: 'refs/tags/v1.1.0']]], poll: false
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'yarn install'
                    echo "installed dependencies"
                   }
                }
            }

        stage('Deploy') {
            when { tag "v1.1.0" }
            steps {
                echo 'Deploying only because this commit is tagged...'
                sh 'npm test'
            }
        }
         
    }
}

