pipeline {
  agent any // Use any available Jenkins agent
  environment {
    NODE_ENV = 'production' // Set the desired environment if needed
  }
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
   stage('Install pnpm') {
    steps {
        script {
            def pnpmCacheDir = "${HOME}/.pnpm-cache"
            sh "mkdir -p ${pnpmCacheDir}"
            sh "npm config set store-dir ${pnpmCacheDir}"
            sh "sudo pnpm install "
        }
    }
}

    stage('Test') {
      steps {
        sh 'npm test' // Replace with your test command
      }
    }
  }
}
