pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    def yarnCacheDir = "${HOME}/.yarn-cache"
                    sh "mkdir -p ${yarnCacheDir}"
                    sh "yarn config set cache-folder ${yarnCacheDir}"
                    sh 'yarn install'
                }
            }
        }
        stage('build') {
            steps {
                sh 'yarn build'
            }
        }
        stage('Test') {
            steps {
                sh 'yarn run'
            }
        }
    }
}
