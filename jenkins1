pipeline {
  agent any
  tools {nodejs "nodejs"}
  stages {
    stage('git Checkout') {
      steps {
        checkout scm
      }
    }
    stage('Install Dependencies') {
      steps {
        script {
          def yarnCacheDir = "${HOME}/.yarn-cache"
          sh "mkdir -p ${yarnCacheDir}"
          withEnv(["YARN_CACHE=${yarnCacheDir}"]) {
            sh 'npm install -g yarn'
          }
        }
      }
    }
    stage('run app') {
      steps {
        sh 'npm run' // Replace with your test command
      }
    }
  }
}

